<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" name="AuctionSiteMap" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Le Vendue", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Login")</li>
                    <li>@Html.ActionLink("Register", "Register", "Register")</li>
                    <li>@Html.ActionLink("Auctionsupport", "Auctionsupport", "Auctionsupport")</li>
                    <li>@Html.ActionLink("UpdateUserProfile", "UpdateUserProfile", "UpdateUserProfile")</li>
                    <li>@Html.ActionLink("MyDashboard", "MyDashboard", "MyDashboard")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />


        <footer class="footer">
            <div class="container">
                <div class="row footer-border">
                    <div class="col-md-2">
                        <img src="~/Content/Template/mobile.jpg" class="img-fluid">
                    </div>
                    <div class="col-md-3 footer-margin">
                        <p>Shop With Confidence</p>
                        <p>Since 2002,LiveAuctioneers has made exceptional items available for sale purchase in secure online auctions.</p>
                    </div>
                    <div class="col-md-5 footer-margin">
                        <img src="~/Content/Template/logo.jpg" class="img-fluid">
                    </div>
                    <div class="col-md-2 footer-margin">
                        <p>Company</p>
                        <button class="footer-btn">About</button>
                    </div>

                </div>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </div>
        </footer>


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- The core Firebase JS SDK is always required and must be listed first -->
    <script src="/__/firebase/7.19.1/firebase-app.js"></script>

    <!-- TODO: Add SDKs for Firebase products that you want to use
         https://firebase.google.com/docs/web/setup#available-libraries -->
    <script src="/__/firebase/7.19.1/firebase-analytics.js"></script>

    <!-- Initialize Firebase -->
    <script src="/__/firebase/init.js"></script>
</body>
</html>
