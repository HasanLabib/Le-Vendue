
@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>

<link href="@Url.Content("~/Content/Template/login.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Template/style.css")" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="@Url.Content("~/fonts/material-icon/css/material-design-iconic-font.min.css")">
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="https://image.shutterstock.com/image-vector/lock-reload-260nw-687934522.jpg" alt="Change passwd image"></figure>
                @Html.ActionLink("Create an account", "Register", "Register")

            </div>

            <div class="signin-form">
                <h2 class="form-title">Change password</h2>
                <form method="POST" class="register-form" id="login-form">
                    <div class="form-group">
                        <label for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" name="Username" id="Username" placeholder="Username" required />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="email" name="Email" id="Email" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="OldPassword" id="OldPassword" placeholder="OldPassword" required />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="NewPassword" id="NewPassword" placeholder="NewPassword" required />
                    </div>

                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Change Password" />
                        <input class="form-submit" type="button" value="ChangeEmail" onclick="@("window.location.href='" + @Url.Action("ChangeEmail", "ChangeEmail") + "'");" />

                    </div>
                </form>

            </div>
        </div>
    </div>
</section>